<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MountingWorksListActivity">

    <!-- Заголовок "Кабельные каналы" -->

    <!-- Кнопки для выбора кабельных каналов -->

    <!-- Кнопки для возврата -->

    <TextView
        android:id="@+id/cableChannelTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Кабельные каналы"
        android:textColor="#21455F"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnWireTray"
        android:layout_width="391dp"
        android:layout_height="91dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="57dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="743dp"
        android:background="@drawable/rounded_button"
        android:text="Проволочный лоток"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnPlasticCableChannel"
        android:layout_width="391dp"
        android:layout_height="91dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="279dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="521dp"
        android:background="@drawable/rounded_button"
        android:text="Пластиковый кабель-канал"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnMetalCableChannel"
        android:layout_width="391dp"
        android:layout_height="91dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="168dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="632dp"
        android:background="@drawable/rounded_button"
        android:text="Металлический кабель-канал"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnBackToSections"
        android:layout_width="383dp"
        android:layout_height="57dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="710dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="124dp"
        android:background="@drawable/rounded_button"
        android:text="Вернуться к выбору раздела"
        android:textColor="#F9FAFA"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnBackToMainMenu"
        android:layout_width="383dp"
        android:layout_height="57dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="790dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="44dp"
        android:background="@drawable/rounded_button"
        android:text="Вернуться в главное меню"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
