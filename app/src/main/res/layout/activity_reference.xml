<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReferenceActivity">

    <!-- Заголовок страницы -->
    <TextView
        android:id="@+id/referenceTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Справочник"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Кнопка: Инструменты для монтажа -->
    <Button
        android:id="@+id/btnToolsForMounting"
        android:layout_width="378dp"
        android:layout_height="119dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="26dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="#21445E"
        android:text="Инструменты для монтажа"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Кнопка: Кабельные каналы -->
    <Button
        android:id="@+id/btnMountingWorks"
        android:layout_width="378dp"
        android:layout_height="119dp"
        android:layout_marginTop="168dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="#21445E"
        android:text="Кабельные каналы"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/referenceTitle" />

    <!-- Кнопка: Линии связи -->

    <!-- Новая кнопка: Сетевые протоколы -->
    <Button
        android:id="@+id/btnLinesOfCommunication"
        android:layout_width="378dp"
        android:layout_height="119dp"
        android:layout_marginTop="304dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="#21445E"
        android:text="Линии связи"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/referenceTitle" />

    <Button
        android:id="@+id/btnNetworkProtocols"
        android:layout_width="378dp"
        android:layout_height="119dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="#21445E"
        android:text="Сетевые протоколы"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnLinesOfCommunication" />

    <Button
        android:id="@+id/btnBackToMainMenu"
        android:layout_width="310dp"
        android:layout_height="54dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:background="@drawable/rounded_button"
        android:text="Назад в главное меню"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnNetworkProtocols" />

</androidx.constraintlayout.widget.ConstraintLayout>
