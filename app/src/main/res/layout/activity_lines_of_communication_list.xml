<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LinesOfCommunicationListActivity">

    <!-- Заголовок для раздела "Линии связи" -->
    <TextView
        android:id="@+id/linesOfCommunicationTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Линии связи"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Кнопки для выбора типа линии связи -->

    <!-- Кнопки для возврата -->

    <Button
        android:id="@+id/btnCopperLine"
        android:layout_width="391dp"
        android:layout_height="91dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="94dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="706dp"
        android:background="@drawable/rounded_button"
        android:text="Медная линия"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnWirelessLine"
        android:layout_width="391dp"
        android:layout_height="91dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="327dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="473dp"
        android:background="@drawable/rounded_button"
        android:text="Беспроводная линия"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnOpticalLine"
        android:layout_width="391dp"
        android:layout_height="91dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="209dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="591dp"
        android:background="@drawable/rounded_button"
        android:text="Оптическая линия"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnBackToSections"
        android:layout_width="383dp"
        android:layout_height="57dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="716dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="118dp"
        android:background="@drawable/rounded_button"
        android:text="Вернуться к выбору раздела"
        android:textColor="#F9FAFA"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnBackToMainMenu"
        android:layout_width="383dp"
        android:layout_height="57dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="788dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="46dp"
        android:background="@drawable/rounded_button"
        android:text="Вернуться в главное меню"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
